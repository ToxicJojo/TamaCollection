{
  "rules": {
		"usernames": {
      ".read": true,
      ".write": false
    },
    "users": {
      "$uid": {
        ".read": true,
        ".write": "auth.uid === $uid",
        "username": {
          ".validate": "!root.child('usernames').child(newData.val()).exists() || root.child('usernames').child(newData.val()).val() == $uid"
        }
      }
    },
    "versions": {
      ".read": true,
      ".write": "root.child('admins').child(auth.uid).exists()",
      "$vid": {
        "comments": {
          ".write": true
        }
      }
    },
    "releases": {
      ".read": true,
      ".write": "root.child('admins').child(auth.uid).exists()"
    },
    "shells": {
      ".read": true,
      ".write": "root.child('admins').child(auth.uid).exists()"
    },
    "collections":  {
      ".read": true,
        "$uid": {
          ".write": "auth.uid === $uid"
        }
    },
    "versionComments": {
      "$cid": {
        ".read": true,
        ".write": "newData.child('owner').val() === auth.uid"
      }
    }
  }
}
