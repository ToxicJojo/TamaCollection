extends ../../application

block content

  .container-fluid
    .row
      .col-md-3

      .col-md-6
        .panel.panel-default
          .panel-heading
            .row
              .col-md-4
                select.form-control#selectVersion
              .col-md-2
                button.btn.btn-success(type='button') Add Release
              .col-md-4
                select.form-control#selectRelease
              .col-md-1
                button.btn.btn-danger(type='button') Delete Release
          .panel-body
            form
              .form-group
                label(for='inputReleaseName') Release Name:
                input#inputReleaseName.form-control(type='text')
              .form-group
                label(for='inputReleaseDate') Date:
                input#inputReleaseDate.form-control(type='text')
              .form-group
                label(for='inputReleasePrice') Price:
                input#inputReleasePrice.form-control(type='text')
              button.btn.btn-primary(type='button') Update Release

block append scripts
  script(src='/js/manageReleasesUI.js')
