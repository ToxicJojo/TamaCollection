extends ../application.pug

block content
  .container-fluid
    .row
      .col-md-3
        .panel.panel-default#profileInfoPanel
          .panel-heading
            h3.panel-title User Info
          .panel-body
            .row
              .col-md-12
                img#profileUserImage.img-responsive.img-rounded(src='/img/profile_pic.png')
            hr
            .row
              .col-md-4
                a#profileSocialInstagram.btn.btn-default.btn-fab.btn-instagram.hidden(target='blank')
                  i.fa.fa-fw.fa-instagram.material-icons
              .col-md-4
                a#profileSocialFacebook.btn.btn-default.btn-fab.btn-facebook.hidden(target='blank')
                  i.fa.fa-fw.fa-facebook.material-icons
              .col-md-4
                a#profileSocialTwitter.btn.btn-default.btn-fab.btn-twitter.hidden(target='blank')
                  i.fa.fa-fw.fa-twitter.material-icons


            dl.dl-horizontal
              dt Name:
              dd#profileUsername
              dt Bio:
              dd#profileUserBio
      .col-md-9
        .panel.panel-default
          .panel-heading
            h3.panel-title Collection
          #profileCollectionPanel.panel-body
            ul#profileCollectionTabs.nav.nav-pills(role='tablist')
              li#profileCollectedTab.tab.active(role='presentation' data-type='Collected')
                a(href='#') Collected
                  span#profileCollectedCount.badge 0
              li#profileWantedTab.tab(role='presentation' data-type='Wanted')
                a(href='#') Wanted
                  span#profileWantedCount.badge 0
              li#profileFavoriteTab.tab(role='presentation' data-type='Favorite')
                a(href='#') Favorites
                  span#profileFavoriteCount.badge 0
            #profileCollectedContent.profileCollectionContent
            #profileWantedContent.profileCollectionContent.hidden
            #profileFavoriteContent.profileCollectionContent.hidden






block append scripts
  script(src='/js/templates/placeHolderShellThumbnail.js')
  script(src='/js/profileUI.js')
